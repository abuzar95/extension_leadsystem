{
  "manifest_version": 3,
  "name": "Prospect Management Extension",
  "version": "1.0.0",
  "description": "Elegant prospect management with smart copy detection",
  "permissions": [
    "activeTab",
    "storage",
    "clipboardRead",
    "clipboardWrite",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost:3001/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_title": "Prospect Manager"
  },
  "web_accessible_resources": [
    {
      "resources": ["content.js", "main.js", "index.html", "assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
